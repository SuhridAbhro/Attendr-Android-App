<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_register"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/logo"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/conpwd"
        android:visibility="visible"
        android:hint="Confirm Password"
        android:layout_below="@+id/pwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@color/white"
        android:padding="10dp"
        android:id="@+id/pwd"
        android:hint="New Password"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/msgdisplay"
        android:textColor="@color/white"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/setpwdbt"
        android:layout_centerHorizontal="true"
        android:layout_height="75dp" />

    <Button
        android:text="Set Password"
        android:layout_width="match_parent"
        android:id="@+id/setpwdbt"
        android:onClick="setPwd"
        android:layout_marginTop="60dp"
        android:background="@color/btn_login_bg"
        android:textColor="@color/btn_login"
        android:layout_below="@+id/conpwd"
        android:layout_centerHorizontal="true"
        android:layout_height="45dp" />

    <Button
        android:text="Go to Login Page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lgbt"
        android:onClick="gologin"
        android:background="@color/btn_login_bg"
        android:textColor="@color/btn_login"
        android:visibility="invisible"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/msgdisplay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>